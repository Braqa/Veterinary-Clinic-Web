@model KlinikaVeterinareTI2.Models.Vaccine
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer

@{
    ViewData["Title"] = Model.Id == 0 ? localizer["lblAddVaccine"] : localizer["lblEditVaccine"];
}


<div class="container mt-5">
    <div class="card shadow mb-4 border-bottom-primary">
        <div class="card-header py-3 d-flex align-items-center">
            <a asp-action="Index" class="btn btn-primary btn-sm btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-arrow-left"></i>
                </span>
            </a>
            <h6 class="m-0 ml-2 font-weight-bold text-primary">@ViewData["Title"]</h6>
        </div>

        <div class="card-body">
            <form asp-action="Upsert">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (Model.Id != 0)
                {
                    <input type="hidden" asp-for="Id" />
                }

                <div class="form-group">
                    <label asp-for="SerialNo" class="control-label">@localizer["lblSerialNo"]</label>
                    <input asp-for="SerialNo" class="form-control" />
                    <span asp-validation-for="SerialNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">@localizer["lblName"]</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">@localizer["lblDescription"]</label>
                    <textarea asp-for="Description" rows="3" class="form-control" style="resize:none;"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group col-md-12 text-center">
                    <button type="submit" class="btn btn-primary btn-sm btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-save"></i>
                        </span>
                        <span class="text">@localizer["lblSave"]</span>
                    </button>
                    <a asp-action="Index" asp-controller="Vaccines" class="btn btn-danger btn-sm btn-icon-split">
                        <span class="icon text-white-50">
                            <i class="fas fa-arrow-left"></i>
                        </span>
                        <span class="text">@localizer["lblCancel"]</span>
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
