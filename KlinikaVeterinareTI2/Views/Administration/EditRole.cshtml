@model KlinikaVeterinareTI2.ViewModels.EditRoleViewModel

@{
    ViewData["Title"] = "Modifiko Rolin";
}

<div class="container mt-5">
    <div class="card shadow mb-4 border-bottom-primary">
        <div class="card-header py-3 d-flex align-items-center">
            <a asp-action="ListRoles" asp-controller="Administration" class="btn btn-primary btn-sm btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-arrow-left"></i>
                </span>
            </a>
            <h6 class="m-0 ml-2 font-weight-bold text-primary">@ViewData["Title"]</h6>
        </div>

        <div class="card-body">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="RoleName"></label>
                    <input asp-for="RoleName" class="form-control" />
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary btn-sm btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-save"></i>
                    </span>
                    <span class="text">Ruaj</span>
                </button>
                <a asp-action="ListRoles" class="btn btn-danger btn-sm btn-icon-split">
                    <span class="icon text-white-50">
                        <i class="fas fa-arrow-left"></i>
                    </span>
                    <span class="text">Anulo</span>
                </a>
                <hr />
                <div class="card shadow my-4 border-left-primary">
                    <div class="card-header">
                        <h6 class="m-0 font-weight-bold text-primary">Perdoruesit ne kete rol</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Users.Any())
                        {
                            foreach (var user in Model.Users)
                            {
                                <h5 class="card-title">@user</h5>
                            }
                        }
                        else
                        {
                            <h5 class="card-title">Nuk ka per momentin</h5>
                        }
                    </div>
                    <div class="card-footer">
                        <a asp-action="EditUsersInRole" asp-controller="Administration" asp-route-roleId="@Model.Id" class="btn btn-primary btn-sm btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-cog"></i>
                            </span>
                            <span class="text">Shto/Largo Perdorues</span>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

