@model IEnumerable<ApplicationUser>

@inject IAuthorizationService authorizationService

@{
    ViewData["Title"] = "Lista e Perdoruesve";
}

<div class="container">
    <div class="card shadow mb-4 border-bottom-primary">
        <div class="card-header py-3 d-flex align-items-center">
            <a asp-action="Register" class="btn btn-primary btn-sm btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-plus-square"></i>
                </span>
                <span class="text">Shto</span>
            </a>
            <h6 class="m-0 ml-2 font-weight-bold text-primary">@ViewData["Title"]</h6>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-sm" id="tblUsers" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Id)
                            </th>
                            @*<th>
                                @Html.DisplayNameFor(model => model.FirstName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LastName)
                            </th>*@
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Id)
                                </td>
                                @*<td>
                                    @Html.DisplayFor(modelItem => item.FirstName)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.LastName)
                                </td>*@
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @*@if ((await authorizationService.AuthorizeAsync(User, "EditRolePolicy")).Succeeded)
                                    {*@
                                    <a asp-action="EditUser" asp-route-id="@item.Id" class="btn btn-warning btn-circle">
                                        <i class="fas fa-pen"></i>
                                    </a>

                                    <a asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-danger btn-circle">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                    <!-- Delete Modal-->
                                    @*<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                                         aria-hidden="true">
                                        <div class="modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">A jeni i sigurt?</h5>
                                                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                                                        <span aria-hidden="true">×</span>
                                                    </button>
                                                </div>
                                                <div class="modal-body">Shtyp Fshij nese deshironi ta fshini rolin.</div>
                                                <div class="modal-footer">
                                                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Anulo</button>
                                                    <a asp-action="DeleteUser" asp-route-id="@item.Id" class="btn btn-danger">Fshij</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>*@

                                    @*}*@

                                    @*<a asp-action="Details" asp-route-id="@item.Id" class="btn btn-secondary">Details</a>*@
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

    </div>
</div>

@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function () {
            $('#tblUsers').DataTable({
                'language': {
                    "sEmptyTable": "Nuk ka asnjë të dhënë në tabele",
                    "sInfo": "Duke treguar _START_ deri _END_ prej _TOTAL_ reshtave",
