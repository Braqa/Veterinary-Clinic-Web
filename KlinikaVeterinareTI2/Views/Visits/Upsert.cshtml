@model KlinikaVeterinareTI2.ViewModels.VisitViewModel
@inject KlinikaVeterinareTI2.Data.Repository.IRepository.IUnitOfWork unitOfWork
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@{
    ViewData["Title"] = Model.Visit.Id == 0 ? localizer["lblAddVisit"] : localizer["lblEditVisit"];
}

<div class="container mt-5">
    <div class="card shadow mb-4 border-bottom-primary">
        <div class="card-header py-3 d-flex align-items-center">
            <a asp-action="Index" class="btn btn-primary btn-sm btn-icon-split">
                <span class="icon text-white-50">
                    <i class="fas fa-arrow-left"></i>
                </span>
            </a>
            <h6 class="m-0 ml-2 font-weight-bold text-primary">@ViewData["Title"]</h6>
        </div>

        <div class="card-body">
            <form asp-action="Upsert" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                @if (Model.Visit.Id != 0)
                {
                    <input type="hidden" asp-for="Visit.Id" />
                }

                <div class="form-group">
                    <label asp-for="Visit.Date" class="control-label">@localizer["lblDate"]</label>
                    @*@Html.TextBoxFor(model => model.Visit.Date, new { @class= "form-control mydatepicker" })*@
                    <input asp-for="Visit.Date" min="1950-01-01" class="form-control form-control-sm" />
                    <span asp-validation-for="Visit.Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Visit.AnimalId" class="control-label">@localizer["lblAnimal"]</label>
                    @Html.DropDownListFor(m => m.Visit.AnimalId, Model.AnimalList, $"-- {localizer.GetString("lblChoose")} --", new { @class = "form-control searchDropdown" })
                    <span asp-validation-for="Visit.AnimalId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Visit.VeterinarianId" class="control-label">@localizer["lblVeterinarian"]</label>
                    @Html.DropDownListFor(m => m.Visit.VeterinarianId, Model.VeterinarianList, $"-- {localizer.GetString("lblChoose")} --", new { @class = "form-control searchDropdown" })
                    <span asp-validation-for="Visit.VeterinarianId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Visit.OwnerId" class="control-label">@localizer["lblOwner"]</label>
                    @Html.DropDownListFor(m => m.Visit.OwnerId, Model.OwnerList, $"-- {localizer.GetString("lblChoose")} --", new { @class = "form-control searchDropdown" })
                    <span asp-validation-for="Visit.OwnerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Visit.Diagnosis" class="control-label">@localizer["lblDiagnosis"]</label>
                    <textarea asp-for="Visit.Diagnosis" rows="3" class="form-control" style="resize:none;"></textarea>
                    <span asp-validation-for="Visit.Diagnosis" class="text-danger"></span>
                </div>
                <hr />
                <div class="form-group col-md-12 text-center">
                    <div class="form-group col-md-12 text-center">
                        <button type="submit" class="btn btn-primary btn-sm btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-save"></i>
                            </span>
                            <span class="text">@localizer["btnSave"]</span>
                        </button>
                        <a asp-action="Index" asp-controller="Vaccines" class="btn btn-danger btn-sm btn-icon-split">
                            <span class="icon text-white-50">
                                <i class="fas fa-arrow-left"></i>
                            </span>
                            <span class="text">@localizer["btnCancel"]</span>
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

